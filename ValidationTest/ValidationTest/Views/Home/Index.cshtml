@model Student
@{
    ViewData["Title"] = "Home Page";
}

<h1>Index Page</h1>
<div>
    <form method="post" asp-controller="Home" 
    asp-action="Index">
    <!-----------이름-------->
        <label asp-for="Name">이름 :</label>
        <input asp-for="Name" class="form-control" placeholder="이름을 넣어주세요." />
        <span asp-validation-for="Name" style="color:red"></span>
        <br />
        <!----------나이-------->
        <label asp-for="Age">나이 :</label>
        <input asp-for="Age" class="form-control" placeholder="나이를 넣어주세요." />
        <span asp-validation-for="Age" style="color:red"></span>
        <br />
        <!----------패스워드---------->
        <input asp-for="Password" class="form-control" placeholder="패스워드를 작성해주세요." />
        <span asp-validation-for="Password" style="color:red"></span>
        <br />
        <!---------------버튼--------->
        <input type="submit" value="Submit"
                 class="btn btn-outline-primary" />

    </form>
</div>