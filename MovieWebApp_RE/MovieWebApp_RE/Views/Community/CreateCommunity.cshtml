@model MovieWebApp_RE.Models.Community

@{
    ViewData["Title"] = "CreateCommunity";
}

<style>
    body {
        background-color: black;
        color: red;
    }
</style>
<h1 style="color: red;">공지사항 작성</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCommunity" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="color: red;">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: red;">
                <label asp-for="Contents" class="control-label"></label>
                <input asp-for="Contents" class="form-control" />
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: red;">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" style="color: red;">
                <label asp-for="Writer" class="control-label"></label>
                <input asp-for="Writer" class="form-control" />
                <span asp-validation-for="Writer" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="color: red;">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Community" style="color: red;">뒤로가기</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
